{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,

    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["ES2022"],
    "target": "ES2022",

    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
